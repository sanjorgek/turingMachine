                       , TypeOperators
                       , MultiParamTypeClasses
                       , GADTSyntax
                       , ExistentialQuantification
  build-depends:       base >=4.8 && <4.9
                       , containers >= 0.5.6.2
  hs-source-dirs:      src
  default-language:    Haskell2010